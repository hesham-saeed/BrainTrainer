<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/gradient_rectangle"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="2dp">

    <ImageView
        android:id="@+id/list_item_avatar_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/avatar2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_user_name"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hesham Saeed Ahmed"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="@id/list_item_points_title_text_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/list_item_score_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="40"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/list_item_avatar_image_view"
        app:layout_constraintRight_toLeftOf="@id/list_item_games_played_text_view"
        app:layout_constraintRight_toRightOf="@id/list_item_games_played_text_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_points_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points"
        android:textAlignment="center"
        android:textColor="#fff"
        app:layout_constraintLeft_toRightOf="@id/list_item_avatar_image_view"
        app:layout_constraintRight_toLeftOf="@id/list_item_games_played_text_view"
        app:layout_constraintTop_toBottomOf="@id/list_item_score_text_view" />

    <TextView
        android:id="@+id/list_item_games_played_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="344"
        android:textColor="#fff"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/list_item_score_text_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Games"
        android:textAlignment="center"
        android:textColor="#fff"
        app:layout_constraintLeft_toRightOf="@id/list_item_score_text_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_item_games_played_text_view" />
</android.support.constraint.ConstraintLayout>